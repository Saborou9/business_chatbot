<%= form_with(model: [current_user, chat], url: chats_path) do |form| %>
  <% if chat.errors.any? %>
    <div class="text-red-500 mb-4">
      <% chat.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-black",
          required: true %>
  </div>
  
  <div class="flex justify-end space-x-3 pt-4">
    <%= form.submit "Create", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Cancel", chats_path, 
                class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300",
                data: { turbo_action: "replace" } %>
  </div>
<% end %>
