<div class="p-4 flex-grow">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold">Chats</h2>
    <%= link_to "New chat", new_chat_path, class: "text-green-500 hover:text-green-400" %>
  </div>
  
  <div id="chats-sidebar" class="flex-grow overflow-y-auto">
    <% if @chats&.any? %>
      <% @chats.each do |chat| %>
        <%= render chat %>
      <% end %>
    <% else %>
      <p class="text-gray-500">No chats found.</p>
    <% end %>
  </div>
</div>

<div class="p-4 border-t border-gray-700">
  <div class="flex items-center">
    <div class="mr-3">
      <%= image_tag current_user.avatar || 'default_avatar.png', class: "w-10 h-10 rounded-full" %>
    </div>
    <div class="flex-grow">
      <p class="text-sm font-semibold"><%= current_user.name || current_user.email %></p>
    </div>
    <%= link_to edit_user_registration_path, class: "text-gray-400 hover:text-white" do %>
      <i class="fas fa-cog"></i>
    <% end %>
  </div>
</div>
