<div class="p-4 flex-grow">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold">Chats</h2>
    <%= link_to "#", 
        class: "flex items-center text-green-500 hover:text-green-400 hover:bg-gray-700 p-2 rounded-md transition-colors group", 
        title: "Create a new chat",
        data: { controller: "modal", action: "modal#open" } do %>
      <i class="fas fa-plus-circle mr-2 group-hover:scale-110 transition-transform"></i>
      <span class="font-semibold">New chat</span>
    <% end %>
  </div>
  
  <div id="chats-sidebar" class="flex-grow overflow-y-auto">
    <% if @chats&.any? %>
      <% @chats.each do |chat| %>
        <%= render chat %>
      <% end %>
    <% else %>
      <p class="text-gray-500">No chats found.</p>
    <% end %>
  </div>
</div>

<div class="mt-auto p-4 border-t border-gray-700">
  <div class="flex items-center">
    <div class="flex-grow">
      <%= link_to current_user.email, edit_user_registration_path, 
                  class: "text-sm font-semibold hover:text-blue-400 hover:underline" %>
    </div>
    <%= link_to edit_user_registration_path, class: "text-gray-400 hover:text-white" do %>
      <i class="fas fa-cog"></i>
    <% end %>
  </div>
</div>
