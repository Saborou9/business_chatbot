<%= form_with(model: [chat, message], 
    local: false, 
    class: "flex space-x-2 w-full", 
    id: "new_message", 
    data: { 
      turbo_frame: "chat_content",
      turbo_action: "replace" 
    }) do |f| %>
  <%= f.text_area :context, 
      placeholder: "Type your message...", 
      rows: 1, 
      class: "flex-grow min-w-[300px] w-full resize-none rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  
  <%= f.submit "Send", 
      class: "bg-gray-500 text-white font-bold py-2 px-4 rounded-md transition duration-300 flex-shrink-0",
      disabled: message_disabled,
      data: { 
        disable_with: "Sending...",
        turbo_submitting: true 
      } %>
<% end %>
