<div class="bg-black min-h-screen flex flex-col">
  <div class="container mx-auto px-4 flex-grow flex flex-col">
    <div class="max-w-4xl mx-auto w-full flex-grow flex flex-col">
      <div class="bg-gray-900 rounded-lg shadow-lg flex-grow flex flex-col">
        <div id="messages" class="flex-grow overflow-y-auto p-4">
          <%= render @messages %>
        </div>
        
        <%= form_with(model: Message.new, local: false, class: "p-4 border-t border-gray-800") do |f| %>
          <div class="flex">
            <%= f.text_area :content, 
                placeholder: "Type your message...", 
                class: "w-full bg-gray-800 text-white p-2 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
            <%= f.submit "Send", 
                class: "bg-green-500 text-black px-4 py-2 rounded-r-lg hover:bg-green-400 transition" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'chat' %>
